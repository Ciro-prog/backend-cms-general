        <!-- Test Results -->
        <div id="testResults" class="hidden mt-6 bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">üß™ Resultados del Test</h3>
            <div id="testContent"></div>
